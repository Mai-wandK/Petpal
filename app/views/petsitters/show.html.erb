<div class="shadow-lg p-3 mb-5 bg-body rounded">
<div class="d-flex profile">
<div class="card mb-3 full-card" style="width: 70vw;" >
  <div class="row g-0 pic-bio">
    <div class="col-md-4 set-pic" >
       <%= image_tag @petsitter.photo, class:"img-fluid rounded-start"%>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= @petsitter.first_name %> <%= @petsitter.last_name %></h5>
        <p class="card-text"><%= @petsitter.description %></p>
        <p class="card-text"><small class="text-muted"> <%= link_to 'Book Now', new_user_booking_path(user_id: current_user.id, petsitter_id: @petsitter.id), class:"btn btn-success" %></p>
      </div>
    </div>
  </div>
</div>
</div>
</div>

