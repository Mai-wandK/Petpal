  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @petsitter.rt %> </h5>
      <p class="card-text"><%= @petsitter.review %></p>
    </div>
  </div>
  <div class="card">

    <div class="card-body">
      <h5 class="card-title"><%= @petsitter.rt %></h5>
      <p class="card-text"><%= @petsitter.review1 %></p>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @petsitter.rt %></h5>
