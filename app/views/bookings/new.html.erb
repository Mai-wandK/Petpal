<div class="container">
  <h1 class="text-center mt-4">New Booking</h1>

  <div id="booking-form" class="row justify-content-center">
    <div class="col-sm-6">
      <%= simple_form_for [@petsitter, @booking], url: user_bookings_path(current_user) do |f| %>

      <div class="mb-3">
        <%= f.input :date_from, label: "Start Date", input_html: { class: 'form-control datepicker' } %>
      </div>

      <div class="mb-3">
        <%= f.input :date_to, label: "End Date", input_html: { class: 'form-control datepicker' } %>
      </div>


      <div class="mb-3">
        <%= f.input :comment, label: "Comment", input_html: { class: 'form-control' } %>
      </div>

        <%= f.hidden_field :user_id, value: current_user.id %>

        <%= f.submit 'Create Booking', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
